@model AskMate.Models.QuestionModel
@{
    ViewData["Title"] = "Details";
}

<link rel="stylesheet" href="~/css/Index.css">
<script src="~/js/site.js"></script>

<ul class="list-group">
    <li class="list-group-item list-group-item-info d-flex justify-content-between align-items-center">
        <h3>#@Model.Id - @Model.Title</h3>
        <a>@Model.GetDate()</a>
        <div>
            <button id="downVote" class="btn-vote" onclick="location.href='@Url.Action("DownVote", "Home", new {id = @Model.Id})'" title="Downvote">
                <span class="oi oi-chevron-bottom downvote"></span>
            </button>
            <span class="badge badge-primary badge-pill">@Model.Vote</span>
            <button id="upVote" class="btn-vote" onclick="location.href='@Url.Action("UpVote", "Home", new {id = @Model.Id})'" title="Upvote">
                <span class="oi oi-chevron-top upvote"></span>
            </button>
        </div>
    </li>
    <li class="list-group-item">Content: @Model.Content</li>
    <li class="list-group-item">Img: <img src=@Model.ImgLink style="width:142px;height:142px;" /></li>


    <li class="list-group-item">
        @using (Html.BeginForm("NewAnswer", "Home", FormMethod.Post))
        {
            <label>Add an answer:</label>
            <textarea name="answer" required></textarea>
            <input name="id" type="hidden" value="@Model.Id" />
            <input type="submit" value="Submit">
        }
    </li>

    <li class="list-group-item">
        @if(Model.Answers.Count >= 1)
        {
            foreach (AnswerModel answer in Model.Answers)
            {
                <a>@answer.GetDate()</a>
                <br>
                <a>@answer.Id - @answer.Content</a>
                <br><br>
            }
        }
    </li>

</ul>
<button class="btn btn-info" onclick="window.location.href='/Home'">Back to questions</button>